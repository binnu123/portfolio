FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy dependency files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

EXPOSE 3000

# IMPORTANT: enable polling for hot reload
CMD ["sh", "-c", "CHOKIDAR_USEPOLLING=true pnpm dev"]
